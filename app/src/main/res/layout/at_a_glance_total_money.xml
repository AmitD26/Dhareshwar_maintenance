<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/cash_text"
            android:text="@string/total_cash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/cheque_text"
            android:text="@string/total_money_collected_in_cheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cash_text"
            android:layout_alignParentStart="true"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/total_text"
            android:text="@string/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cheque_text"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/total_money_collected_in_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/total_money_collected_in_cheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/total_money_collected_in_cash"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/total_money_collected_in_cheque"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/reset_collected_money"
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_text"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:textColor="#FF0000"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>