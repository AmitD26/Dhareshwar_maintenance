<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.dhareshwar_maintenance.NoticeFragment">


    <TextView
        android:layout_width="55dp"
        android:layout_height="120dp"
        android:id="@+id/noticeID_textView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="88dp"
        android:layout_height="120dp"
        android:id="@+id/view_notice_details_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:id="@+id/notice_date_textView"
        app:layout_constraintRight_toRightOf="@+id/view_notice_details_button"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/notice_subject_textView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:id="@+id/notice_sender_textView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/noticeID_textView"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintTop_toTopOf="@+id/notice_date_textView"
        android:layout_marginTop="88dp" />


</android.support.constraint.ConstraintLayout>
