<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.dhareshwar_maintenance.NoticeFragment">


    <TextView
        android:layout_width="72dp"
        android:layout_height="120dp"
        android:id="@+id/noticeID_textView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:layout_width="297dp"
        android:layout_height="32dp"
        android:id="@+id/notice_date_textView"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="297dp"
        android:layout_height="40dp"
        android:id="@+id/notice_subject_textView"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold" />

    <TextView
        android:layout_width="297dp"
        android:layout_height="32dp"
        android:id="@+id/notice_sender_textView"
        app:layout_constraintLeft_toLeftOf="@+id/noticeID_textView"
        android:layout_marginStart="72dp"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
