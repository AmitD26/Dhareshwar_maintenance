<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.dhareshwar_maintenance.NoticeFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="336dp"
                android:layout_height="6dp"
                android:id="@+id/noticeID_textView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="265dp"
                android:layout_height="32dp"
                android:id="@+id/notice_date_textView"
                android:layout_marginStart="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.41"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="265dp"
                android:layout_height="50dp"
                android:id="@+id/notice_subject_textView"
                android:layout_marginStart="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="336dp"
                android:layout_height="0dp"
                android:id="@+id/notice_sender_textView"
                app:layout_constraintLeft_toLeftOf="@+id/noticeID_textView"
                app:layout_constraintTop_toTopOf="@+id/notice_date_textView"
                android:layout_marginTop="88dp"
                android:layout_marginStart="64dp" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
