<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/payment_relative_layout">

    <ImageView
        android:id="@+id/recent_payment_image_view"
        android:layout_marginStart="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cash"/>

    <TextView
        android:text="\u201B 5000"
        android:id="@+id/recent_payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/recent_payment_image_view"/>

    <TextView
        android:text="payment date"
        android:id="@+id/recent_payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_toEndOf="@id/recent_payment_amount"/>

    <TextView
        android:text="confirmed date"
        android:id="@+id/recent_payment_confirmed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/recent_payment_amount"
        android:layout_toEndOf="@id/recent_payment_image_view"/>

    <TextView
        android:text="payment id"
        android:id="@+id/recent_payment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/recent_payment_confirmed_date"
        android:layout_toEndOf="@id/recent_payment_image_view"/>

    <TextView
        android:text="payment method"
        android:id="@+id/recent_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/recent_payment_id"
        android:layout_toEndOf="@id/recent_payment_image_view"/>

    <TextView
        android:text="payment type"
        android:id="@+id/recent_payment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/recent_payment_method"
        android:layout_toEndOf="@id/recent_payment_image_view"/>

    <TextView
        android:id="@+id/recent_payment_view_receipt"
        android:text="@string/view_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recent_payment_image_view"
        android:layout_toStartOf="@id/recent_payment_method"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone" />

</RelativeLayout>
