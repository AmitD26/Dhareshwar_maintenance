<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/payment_relative_layout">

            <ImageView
                android:id="@+id/payment_image_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="payment amount"
                android:id="@+id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/payment_image_view"/>

            <TextView
                android:text="payment date"
                android:id="@+id/payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:layout_toEndOf="@id/payment_amount"/>

            <TextView
                android:text="confirmed date"
                android:id="@+id/payment_confirmed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/payment_amount"
                android:layout_toEndOf="@id/payment_image_view"/>

            <TextView
                android:text="payment id"
                android:id="@+id/payment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/payment_confirmed_date"
                android:layout_toEndOf="@id/payment_image_view"/>

            <TextView
                android:text="payment method"
                android:id="@+id/payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/payment_id"
                android:layout_toEndOf="@id/payment_image_view"/>

            <TextView
                android:text="payment type"
                android:id="@+id/payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/payment_method"
                android:layout_toEndOf="@id/payment_image_view"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
